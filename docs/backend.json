
{
  "entities": {
    "Perfume": {
      "title": "Perfume",
      "type": "object",
      "description": "Represents a perfume product with its attributes.",
      "properties": {
        "number": {
          "type": "number",
          "description": "The perfume's number or code."
        },
        "namaParfum": {
          "type": "string",
          "description": "The name of the perfume."
        },
        "deskripsiParfum": {
          "type": "string",
          "description": "A detailed description of the perfume."
        },
        "topNotes": {
          "type": "string",
          "description": "The top notes of the perfume."
        },
        "middleNotes": {
          "type": "string",
          "description": "The middle notes of the perfume."
        },
        "baseNotes": {
          "type": "string",
          "description": "The base notes of the perfume."
        },
        "penggunaan": {
          "type": "string",
          "description": "The recommended usage or occasion for the perfume."
        },
        "sex": {
          "type": "string",
          "description": "The target gender or sex for the perfume.",
           "enum": ["Male", "Female", "Unisex"]
        },
        "lokasi": {
          "type": "string",
          "description": "The location or origin of the perfume."
        },
        "jenisAroma": {
          "type": "string",
          "description": "Scent type for the perfume"
        },
        "kualitas": {
          "type": "string",
          "description": "The perceived quality or rating of the perfume.",
          "enum": ["Premium", "Extrait"]
        },
        "imageUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL of the perfume image."
        }
      },
      "required": [
        "namaParfum",
        "deskripsiParfum",
        "topNotes",
        "middleNotes",
        "baseNotes",
        "penggunaan",
        "sex",
        "lokasi",
        "jenisAroma",
        "kualitas"
      ]
    },
    "UserProfile": {
        "title": "User Profile",
        "type": "object",
        "description": "Represents a user's profile.",
        "properties": {
            "displayName": {
                "type": "string"
            },
            "email": {
                "type": "string",
                "format": "email"
            }
        },
        "required": ["displayName", "email"]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
      "/perfumes/{perfumeId}": {
        "schema": {
            "$ref": "#/entities/Perfume"
        },
        "description": "Collection of perfumes."
      },
      "/users/{userId}": {
          "schema": {
              "$ref": "#/entities/UserProfile"
          },
          "description": "User profiles."
      }
  }
}
