rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the current user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    match /perfumes/{perfumeId} {
      // Allow anyone to get a single perfume document
      allow get: if true;
      // Only allow signed-in users to write (create, update, delete)
      allow write: if isSignedIn();
    }

    match /perfumes {
        // Allow anyone to list the perfume collection
        allow list: if true;
    }
    
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
